<h1>Lists</h1>
<center>
    <div class="card" style="width: 18rem;">
    <div class="card-body">
        <%= render 'form_index', list: @list %>
    </div>
    </div>
</center>
<br />
<br />
<table class="table table-bordered">
  <tbody>
    <% @lists.each do |list| %>
    <% if list.completed %>
      <tr class='table-success'>
        <td class='strike-through' ><%= link_to list.description, edit_list_path(list) %></td>
        <td>
            <% link_to 'Show', list %>
            <% link_to 'Edit', edit_list_path(list) %>
           <center><%= link_to 'Delete', list, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></center>
        </td>
      </tr>
      <% else %>
       <tr>
        <td><%= link_to list.description, edit_list_path(list) %></td>
        <td>
            <% link_to 'Show', list %>
            <% link_to 'Edit', edit_list_path(list) %>
            <center><%= link_to 'Delete', list, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></center>
        </td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add Todo', new_list_path, class: 'btn btn-secondary' %>
